{
  "path": "/my-ws-endpoint",
  "authentication": {
    "mode": "basic",
    "username": "basic_user",
    "password":  "strongPassword"
  },
  "filters": {
    "whitelistIps": [],
    "blacklistIps": [],
    "whitelistHosts": [],
    "blacklistHosts": []
  },
  "routes": [
    {
      "type": "CONNECT",
      "name": "Connect",
      "http": [
        {
          "destination": "service.1.example.com/connect",
          "timeoutInMillis": 300,
          "additionalHeaders": {
            "X-Debug-Id": "id"
          }
        }
      ],
      "kafka": [
        {
          "topic": "service.2.connect.topic"
        }
      ]
    },
    {
      "type": "DISCONNECT",
      "name": "Disconnect",
      "http": [
        {
          "destination": "service.1.example.com/disconnect"
        }
      ],
      "kafka": [
        {
          "topic": "service.2.connect.disconnect"
        }
      ]
    },
    {
      "type": "DEFAULT",
      "name": "Default",
      "http": [
        {
          "destination": "service.1.example.com/default"
        }
      ],
      "topic": [
        {
          "destination": "service.2.connect.default"
        }
      ]
    }
  ]
}
